<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StovyklaActivity">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="APLEISTA STOVYKLA" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_below="@id/textView6"
            android:text="Pats tinkamiausias metų laikas čia apsilankyti būtų žiemą. Vasara visur žaluma, sunku rasti kelią į namelių vidų, o mažesnius namelius iš vis sunku pastebėti. Viskas yra apsupta medžių, krūmynų. Kaip bebūtų, vasaros metu aplankyta stovykla žalumos apsuptyje po gero vasariško lietaus atrodo lyg mažas, likimo valiai paliktas miestelis." />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="600px"
            android:layout_below="@id/textView7"
            android:padding="0px"
            android:paddingBottom="0px"
            app:srcCompat="@drawable/stovykla" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:text="ISTORIJA"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:text="Įspūdingoje vietoje, šalia Kauno marių veikusi pionierių stovykla šiandien – baugi vieta. Iki šiol čia neatsirado vieno šeimininko. Valstybė anksčiau itin pigiai pardavė sklypą, o 2017 m. teisme įrodyta, kad pardavimas niekinis – teko grąžinti ir pinigus už sklypą, ir dar sumokėti 150 tūkst. eurų kompensacijų. Pastatus čia valdo verslininkai – norėtų juos pritaikyti rekreacijai, bet be žemės – negali.
Stovykloje savininkai mainėsi ne kartą, įsivelta į teismų maratonus, kur susikirto valstybės ir verslo interesai. Valstybė žemę pardavė statinių savininkams už 26 tūkst. eurų, vėliau žemę susigrąžino, ir dar primokėjo 150 tūkst. eurų. Būta vizijų, kad čia galėtų iškilti rekreacinės paskirties statinių kompleksas – gal gyvenamieji namai, gal sanatorija, gal vandenų transporto turizmo centras.
"/>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRAMOGOS"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView8"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netoliese yra Kauno marių paplūdimys"
            android:layout_below="@id/textView10"/>
        <Button
            android:id="@+id/button_addPoint6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Esu objekto teritorijoje!"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>