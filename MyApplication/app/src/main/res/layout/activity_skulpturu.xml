<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SkulpturuActivity">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="SKULPTŪRŲ PARKAS" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_below="@id/textView6"
            android:text="Tai Kauno marių užlietų kaimų istorijos kurios atgimsta skulptūrose. Ši vietovė dar vadinama lietuviškąja Atlantida, mat dėl statomos hidroelektrinės po vandeniu buvo palaidoti dešimtys kaimų, ir beveik 700 sodybų. Šioje vietoje dabar kuriamas unikalus parkas, kuriame lankytojų laukia staigmenos." />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="600px"
            android:layout_below="@id/textView7"
            android:padding="0px"
            android:paddingBottom="0px"
            app:srcCompat="@drawable/skulpturuparkas1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:text="ISTORIJA"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:text="Ši vietovė dar vadinama lietuviškąja Atlantida. Prieš 62-ejus metus dėl hidroelektrinės statybų vandeniu buvo užlieti 35 kaimai, iš viso apie 700 sodybų. Visiems jų gyventojams teko išsikelti, išsivaryti gyvulius ir kurti naują gyvenimą.
iš vandens išnyra šienpjoviai, bažnyčios varpinė, įvairūs gyvūnai, augalai. Visos skulptūros drožtos benzininiais pjūklais.
" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRAMOGOS"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView8"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netoliese Laumėnų poilsiavietė, Žiegždrių geologinis takas, Girionių poilsiavietė, Laumėnų pažintinis takas"
            android:layout_below="@id/textView10"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RENGINIAI"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView11"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020 metais vyko renginys „lipantys iš vandens“. Panašūs renginiai gali būti organizuojami ir ateityje."
            android:layout_below="@id/textView12"/>
        <Button
            android:id="@+id/button_addPoint14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Esu objekto teritorijoje!"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>