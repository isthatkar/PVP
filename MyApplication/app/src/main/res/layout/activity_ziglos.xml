<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ZiglosActivity">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="ŽIGLOS ĮLANKA" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_below="@id/textView6"
            android:text="Upelį supa vešliu mišku apaugę skardžiai, o šlaituose subujoję įspūdingi gebenės lipikės sąžalynai." />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="600px"
            android:layout_below="@id/textView7"
            android:padding="0px"
            android:paddingBottom="0px"
            app:srcCompat="@drawable/ziglosilanka1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:text="ISTORIJA"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:text="Tai sankirta nedidelės upės Kauno rajone, patenkančios į Kauno marių regioninio parko teritoriją. Priklauso Nemuno mažųjų intakų (su Nemunu) baseinui. Įteka kairiajame krante, 242,2 km atstumu nuo pastarojo žiočių. Prasidėjęs aukštumose prie Viršužiglio. Prie įtekėjimo į marias vietos upelis ženkliai išplatėja, ten susidariusi įlanka." />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRAMOGOS"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView8"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netoliese saugomas gamtos paveldo objektas „Žiglos maumedis“, kilometro atstumu pasiekimas Kadagių slėnis.
Netoliese yra žirgynas, kur galėsite išmėginti pasijodinėjimą, ar ramų pasivaikščiojimą su žirgais Arlaviškių- Viršužiglio apylinkėse.
"
            android:layout_below="@id/textView10"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RENGINIAI"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView11"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netoliese yra žirgynas, kur galėsite išmėginti pasijodinėjimą, ar ramų pasivaikščiojimą su žirgais Arlaviškių- Viršužiglio apylinkėse."
            android:layout_below="@id/textView12"/>
        <Button
            android:id="@+id/button_addPoint13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Esu objekto teritorijoje!"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>